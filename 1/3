3.1
print('Введите число')
num = int(input())
sum = 0
for s in str(num):
    sum += int(s)
print('Сумма цифр =', sum)


3.2
print ('Введите число')
num = int(input())
sum = 1
for i in range (1, num + 1):
    sum = sum * i
print ("Факториал =", sum)


3.3
print('Введите число')
num = int(input())
print('Числа, делющиеся на 7:')
for i in range (num + 1):
    i += 1
    if i % 7 == 0:
        print(i)
